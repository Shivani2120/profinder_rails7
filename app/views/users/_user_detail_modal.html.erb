<%= turbo_frame_tag :remote_modal, target: :_top do %>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="bs-modal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">User Detail</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                   <div class="row">
                      <div class="col-lg">
                         <p><strong>name:</strong> <%= user.name %></p>
                         <p><strong>Email:</strong> <%= user.email %></p>
                         <p><strong>City:</strong> <%= user.city %></p>
                         <p><strong>State:</strong> <%= user.state %></p>
                         <p><strong>Country:</strong> <%= user.country %></p>
                         <p><strong>Contact Number:</strong> <%= user.contact_number %></p>
                      </div>
                   </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-dark" data-bs-dismiss="modal" aria-label="Close">Close</button>
                </div >
            </div>
        </div>
    </div>
<% end %>  